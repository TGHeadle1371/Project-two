<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Hi
                {{# if loggedin}}
                {{userName}},
                {{/if}} welcome to your dashboard!</h1>
            <hr>
            <br>
            <div class="row">
                <div class="col-lg-12">


                    {{# if loggedin}}
                    <h4>Username: {{userName}}</h4>
                    {{!-- <h4>Password: {{password}}</h4> --}}
                    <h4>First name: {{first_name}}</h4>
                    <h4>Last name: {{last_name}}</h4>
                    <h4>Email: {{email}}</h3>
                        {{/if}}
                        <br>
                        <h3>To make changes, submit the form below!</h3>
                        <br>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="changeUser">Username: </label>
                                    <input type="text" class="form-control" data-id="{{id}}" id="newUserName"
                                        placeholder="Username">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Password: </label>
                                    <input type="password" class="form-control" data-id="{{id}}" id="newPassword"
                                        placeholder="Password">
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputFirstName">First Name:</label>
                                    <input type="text" class="form-control" data-id="{{id}}" id="newFirstName"
                                        placeholder="First">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputAddress2">Last Name:</label>
                                    <input type="text" class="form-control" data-id="{{id}}" id="newLastName"
                                        placeholder="Last">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail">Email Address:</label>
                                    <input type="email" class="form-control" data-id="{{id}}" id="newEmail"
                                        placeholder="something@mail.com">
                                </div>
                            </div>
                            <button type="Submit" method="POST" class="btn btn-success">Submit</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#search-button").on("click", function (event) {
            var id = $(this).data("id");
            var newUserName = $(this).data("newUserName")
            var newPassword = $(this).data("newPassword");
            var newFirstName = $(this).data("FirstName");
            var newLastName = $(this).data("LastName");
            var newEmail = $(this).data("newEmail");

            var updateUser = {
                username: $("#newUserName").val().trim(),
                password: $("#newPassword").val().trim(),
                first_name: $("#newFirstName").val().trim(),
                last_name: $("#newLastName").val().trim(),
                email: $("#newEmail").val().trim(),
            }


            // Send the Post request.
            $.ajax("/api/users/" + id, {
                type: "POST",
                data: updateUser
            }).then(
                function () {
